<h1>Listing boxes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Container type</th>
      <th>Container</th>
      <th>Flags</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @boxes.each do |box| %>
      <tr>
        <td><%= box.name %></td>
        <td><%= box.container_type %></td>
        <td><%= box.container_id %></td>
        <td><%= box.flags %></td>
        <td><%= link_to 'Show', box %></td>
        <td><%= link_to 'Edit', edit_box_path(box) %></td>
        <td><%= link_to 'Destroy', box, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

